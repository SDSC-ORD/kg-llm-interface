apiVersion: apps/v1
kind: Deployment
metadata:
  name: chroma-server
spec:
  replicas: 1
  selector:
    matchLabels:
      app: chroma
  template:
    metadata:
      labels:
        app: chroma
    spec:
      containers:
      - name: kg-llm-chroma
        image: ghcr.io/chroma-core/chroma:0.3.23
        command:
        - uvicorn
        args: ["chromadb.app:app", "--reload", "--workers", "1", "--host", "0.0.0.0", "--port", $(CHROMA_PORT), "--log-config", "log_config.yml"]
        env:
        - name: CHROMA_DB_IMPL
          value: "clickhouse"
        - name: CLICKHOUSE_HOST
          value: "clickhouse"
        - name: CLICKHOUSE_PORT
          value: clickhouse_http_port_placeholder
        - name: CHROMA_PORT
          value: chroma_port_placeholder
        ports:
        - containerPort: 0
          name: chroma-port
        volumeMounts:
        - name: index-data
          mountPath: /index_data
      - name: kg-llm-clickhouse
        image: clickhouse/clickhouse-server:22.9-alpine
        env:
        - name: ALLOW_EMPTY_PASSWORD
          value: "yes"
        - name: CLICKHOUSE_TCP_PORT
          value: $(CLICKHOUSE_TCP_PORT)
        - name: CLICKHOUSE_HTTP_PORT
          value: $(CLICKHOUSE_HTTP_PORT)
        volumeMounts:
        - name: clickhouse-data
          mountPath: /var/lib/clickhouse
        - name: backups
          mountPath: /backups
        - name: config
          mountPath: /etc/clickhouse-server/config.d/backup_disk.xml
        - name: users
          mountPath: /etc/clickhouse-server/users.d/chroma.xml
      volumes:
      - name: index-data
        persistentVolumeClaim:
          claimName: index-data
      - name: clickhouse-data
        persistentVolumeClaim:
          claimName: clickhouse-data
      - name: backups
        persistentVolumeClaim:
          claimName: backups
      - name: config
        configMap:
          name: backup-disk-config
          items:
          - key: backup_disk.xml
            path: backup_disk.xml
      - name: users
        configMap:
          name: chroma-users-config
          items:
          - key: chroma.xml
            path: chroma.xml
